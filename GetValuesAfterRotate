_def rotate(values, direction)
  n = 1         # マジックナンバーよくない
  matsize = 3   # マジックナンバーよくない
  valsize = 9   # マジックナンバーよくない
  matrix[matsize][matsize]
  rotmat[matsize][matsize]
  rotval[valsize]

  # 1次元配列から2次元配列に変換
  for i in 0..2 do
    for j in 0..2 do
      matrix[i][j] = values[n]
      n += 1
    end
  end

  # 進行方向へ時計回りに回転
  for k in 0..direction do
    for i in 0..2 do
      for j in 0..2 do
        rotmat[j, 2-i] = matrix[i][j]
      end
    end
  end

  # 2次元配列から1次元配列に変換
  n = 1 # nを再び初期化
  for i in 0..2 do
    for j in 0..2 do
      rotval[n] = rotmat[i][j]
      n += 1
    end
  end

  # 動作確認用
  n = 1
  for i in 0..2 do
    for j in 0..2 do
      print values[n]
      n += 1
    end
    print "\n"
  end

  return rotval
end


values = [1,2,3,4,5,6,7,8,9]
tekito

tekito = rotate(values, 0)
tekito = rotate(values, 1)
tekito = rotate(values, 2)
tekito = rotate(values, 3)
